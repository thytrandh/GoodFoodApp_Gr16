<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <ImageButton
            android:id="@+id/button_OnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:paddingLeft="10dp"
            tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/bg_white"
            android:tint="@color/txt_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            tools:ignore="HardcodedText,SpUsage" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Payment Method"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Item radio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:layout_marginVertical="1dp">
                <RadioButton
                    android:id="@+id/radio_option_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/white"
                    android:text="Cash"
                    android:checked="true"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>
            <!--Item radio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:weightSum="5"
                android:layout_marginVertical="1dp">
                <RadioButton
                    android:id="@+id/radio_option_momo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/white"
                    android:text="Momo"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:src="@drawable/img_payment_momo" />
            </LinearLayout>
            <!--Item radio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:weightSum="5"
                android:layout_marginVertical="1dp">
                <RadioButton
                    android:id="@+id/radio_option_zalopay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/white"
                    android:text="ZaloPay"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:src="@drawable/img_payment_zalopay" />
            </LinearLayout>
            <!--Item radio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:weightSum="5"
                android:layout_marginVertical="1dp">
                <RadioButton
                    android:id="@+id/radio_option_vnpay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/white"
                    android:text="VnPay"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:src="@drawable/img_payment_vnpay" />
            </LinearLayout>
            <!--Item radio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:weightSum="5"
                android:layout_marginVertical="1dp">
                <RadioButton
                    android:id="@+id/radio_option_visa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:background="@color/white"
                    android:text="VisaCard"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:src="@drawable/img_payment_visa" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_btn"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="40dp"
        android:paddingVertical="15dp"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <!-- Logo and version-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="v1.6.2"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/txt_grey"
            android:textSize="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_regular"
            android:text="GOODFOOD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>