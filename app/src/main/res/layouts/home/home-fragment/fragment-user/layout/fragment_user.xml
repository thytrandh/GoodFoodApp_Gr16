<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    tools:context="Fragment.UserFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <ImageButton
            android:id="@+id/button_OnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:padding="10dp"
            tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/bg_white"
            android:tint="@color/txt_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tran Duong"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            tools:ignore="HardcodedText,SpUsage" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Order"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:id="@+id/textView_Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Voucher"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:id="@+id/textView_Voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Home"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:id="@+id/textView_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:id="@+id/textView_Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:id="@+id/textView_Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help Centre"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="15dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_navigate_next"
                android:tint="@color/grey"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="v1.6.2"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/txt_grey"
            android:textSize="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_regular"
            android:text="GOODFOOD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>